# ===========================================
# NEBU MOBILE - DESARROLLO (TEMPLATE)
# ===========================================
# Tu configuración personal de desarrollo

# ===========================================
# ENTORNO
# ===========================================
NODE_ENV=development
DOCKER_TARGET=development

# ===========================================
# PUERTOS
# ===========================================
BACKEND_PORT=3001
FRONTEND_PORT=3002

# ===========================================
# URLs - DESARROLLO
# ===========================================
FRONTEND_URL=http://localhost:3002
API_URL=http://localhost:3001
BACKEND_URL=http://backend:3001
NEXT_PUBLIC_APP_URL=http://localhost:3002
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3002
NEXT_PUBLIC_API_URL=https://api.localhost
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# ===========================================
# BASE DE DATOS - DESARROLLO
# ===========================================
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USERNAME=nebu_user
DATABASE_PASSWORD=nebu_password_2024!
DATABASE_NAME=nebu_db
DATABASE_SSL=false
DATABASE_URL=postgresql://${DATABASE_USERNAME}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# ===========================================
# REDIS - DESARROLLO
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ===========================================
# AUTENTICACIÓN - DESARROLLO
# ===========================================
JWT_SECRET=dev_jwt_secret_change_in_production_2024
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=dev_refresh_secret_change_in_production_2024
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
PASSWORD_RESET_EXPIRES_IN=1h
EMAIL_VERIFICATION_EXPIRES_IN=24h

# ===========================================
# OAUTH - DESARROLLO
# ===========================================
NEXTAUTH_URL=http://localhost:3002
NEXTAUTH_SECRET=dev_nextauth_secret_change_in_production_2024

# Google OAuth (Configurar en Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth (Configurar en GitHub Developer Settings)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# ===========================================
# STRIPE - DESARROLLO
# ===========================================
# Configurar en Stripe Dashboard (modo test)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_test_your_webhook_secret_here

# ===========================================
# CLOUDINARY - DESARROLLO
# ===========================================
# Configurar en Cloudinary
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
NEXT_PUBLIC_CLOUDINARY_API_KEY=your_cloudinary_api_key_here
NEXT_PUBLIC_CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# ===========================================
# DOMINIO Y SSL - DESARROLLO/PRODUCCIÓN
# ===========================================
DOMAIN=localhost
ACME_EMAIL=admin@nebu.com

# ===========================================
# LIVEKIT - AUDIO/VIDEO TIEMPO REAL
# ===========================================
LIVEKIT_API_KEY=nebu-dev
LIVEKIT_SECRET_KEY=nebu-dev-secret-key-2024
LIVEKIT_URL=http://livekit:7880
LIVEKIT_WS_URL=ws://localhost:7880
LIVEKIT_PUBLIC_URL=http://localhost:7880

# ===========================================
# N8N - AUTOMATIZACIÓN
# ===========================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_WEBHOOK_URL=http://localhost:5678
TZ=America/Mexico_City

# ===========================================
# CARACTERÍSTICAS/FEATURES
# ===========================================
ENABLE_ANALYTICS=true
ENABLE_WEBSOCKET=true
ENABLE_CHAT=true
ENABLE_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_OAUTH=true
ENABLE_STRIPE=true

# Frontend Feature Flags (NEXT_PUBLIC_ prefix for client-side access)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_EMAIL_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_OAUTH=true
NEXT_PUBLIC_ENABLE_STRIPE=true

# ===========================================
# DESARROLLO HÍBRIDO
# ===========================================
# Permitir conexiones desde localhost en producción (para desarrollar localmente)
ALLOW_LOCALHOST_CORS=false

# ===========================================
# MONITOREO Y LOGS
# ===========================================
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# ===========================================
# GRAFANA - MONITOREO
# ===========================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# ===========================================

# ===========================================
# EMAIL/SMTP - CONFIGURACIÓN
# ===========================================
# Configuración SMTP para envío de emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=noreply@nebu.com

# ===========================================
# NOTAS IMPORTANTES
# ===========================================
# 1. Copia este archivo como .env
# 2. Reemplaza todos los valores "your_*_here" con tus credenciales reales
# 3. NUNCA subas el archivo .env al repositorio
# 4. Las credenciales de email se configuran en la base de datos (email_accounts)
# 5. Para producción, usa variables de entorno del servidor