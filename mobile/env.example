# =================================
# NEBU MOBILE - ENVIRONMENT VARIABLES
# =================================
# Copy this file to .env and fill in your actual values
# Important: Never commit .env file to version control

# =================================
# BACKEND API CONFIGURATION
# =================================
# The URL of your backend server
# For development, use your computer's IP instead of localhost
# Example: http://192.168.1.100:3000
API_BASE_URL=http://localhost:3000

# =================================
# GOOGLE SIGN-IN CONFIGURATION
# =================================
# Android Client ID for Google Sign-In
# Get this from Google Cloud Console > Credentials > OAuth 2.0
# Format: xxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_ID=your-android-client-id.apps.googleusercontent.com

# Web Client ID for server-side authentication (if needed)
# Usually same as Android Client ID in closed systems
GOOGLE_WEB_CLIENT_ID=your-web-client-id.apps.googleusercontent.com

# =================================
# FACEBOOK LOGIN CONFIGURATION
# =================================
# Facebook App ID from Facebook for Developers
FACEBOOK_APP_ID=your-facebook-app-id

# Facebook Client Token (found in Facebook App Settings)
FACEBOOK_CLIENT_TOKEN=your-facebook-client-token

# =================================
# APPLE SIGN-IN CONFIGURATION
# =================================
# Apple Service ID for Sign in with Apple
# Example: com.nebu.mobile.web
APPLE_CLIENT_ID=com.nebu.mobile.web

# Apple Team ID (10-character identifier from Apple Developer account)
APPLE_TEAM_ID=your-apple-team-id

# Apple Key ID for JWT signing (found in Apple Developer > Keys)
APPLE_KEY_ID=your-apple-key-id

# Path to Apple Private Key (.p8 file)
# Keep this file secure and use absolute paths
APPLE_PRIVATE_KEY_PATH=path/to/AuthKey_XXXXXXXXXX.p8

# =================================
# LIVEKIT CONFIGURATION
# =================================
# LiveKit server URL for real-time communication
# Example: wss://your-domain.livekit.cloud
LIVEKIT_URL=your-livekit-url

# LiveKit API Key (found in LiveKit Cloud dashboard)
LIVEKIT_API_KEY=your-livekit-api-key

# LiveKit Secret Key (found in LiveKit Cloud dashboard)
LIVEKIT_SECRET_KEY=your-livekit-secret-key

# =================================
# DEVELOPMENT SETTINGS
# =================================
# Optional: Set to 'development' to enable debug features
APP_VARIANT=development
