FROM node:18-alpine AS base

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Development stage
FROM base AS development
EXPOSE 3001
ENV NODE_OPTIONS="--experimental-global-webcrypto"
CMD ["npm", "run", "start:dev"]

# Production stage
FROM base AS production
RUN npm run build
EXPOSE 3001
CMD ["npm", "run", "start:prod"]